{
  "name": "odd-storage",
  "version": "0.5.1",
  "description": "node.js and browser storage",
  "keywords": [
    "storage",
    "memory",
    "localstorage",
    "indexeddb",
    "sqlite",
    "websql",
    "postgresql"
  ],
  "bugs": {
    "url": "https://github.com/fanatid/odd-storage/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Kirill Fomichev",
    "email": "fanatid@ya.ru"
  },
  "files": [
    "lib",
    "src",
    "LICENSE",
    "README.md"
  ],
  "main": "./lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/fanatid/odd-storage.git"
  },
  "scripts": {
    "prepublish": "npm run clean && npm run compile",
    "compile": "babel -d lib src",
    "compile:watch": "babel -d lib src -w",
    "coverage": "find test/ -type f -name \"*.js\" | xargs istanbul cover _mocha -- --compilers js:babel/register",
    "coveralls": "npm run coverage && coveralls <coverage/lcov.info",
    "clean": "rm -rf lib/*",
    "lint": "standard",
    "test": "npm run test:node && npm run test:browser",
    "test:browser": "karma start karma.conf.js",
    "test:node": "find test/ -type f -name \"*.js\" | xargs istanbul test mocha -- --compilers js:babel/register --reporter spec"
  },
  "dependencies": {
    "babel-runtime": "^5.8.20",
    "core-decorators": "^0.8.1",
    "error-system": "^1.0.0",
    "make-concurrent": "^1.1.1",
    "ready-mixin": "^2.0.0"
  },
  "devDependencies": {
    "babel": "^5.8.21",
    "babel-core": "^5.8.22",
    "babel-eslint": "^4.0.5",
    "babelify": "^6.4.0",
    "chai": "^3.4.0",
    "chai-as-promised": "^5.1.0",
    "coveralls": "^2.11.3",
    "istanbul": "^0.4.0",
    "karma": "^0.13.14",
    "karma-browserify": "^4.4.0",
    "karma-chrome-launcher": "^0.2.1",
    "karma-detect-browsers": "^2.0.2",
    "karma-firefox-launcher": "^0.1.6",
    "karma-mocha": "^0.2.0",
    "mocha": "^2.2.5",
    "pg": "^4.4.3",
    "sqlite3": "^3.0.8",
    "standard": "^5.3.1"
  },
  "engines": {
    "node": ">=0.10"
  },
  "browser": {
    "./lib/index.js": "./lib/index-browser.js",
    "./src/index.js": "./src/index-browser.js"
  },
  "standard": {
    "globals": [
      "describe",
      "xdescribe",
      "beforeEach",
      "afterEach",
      "it"
    ],
    "parser": "babel-eslint"
  }
}

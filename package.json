{
  "name": "odd-storage",
  "version": "0.0.1",
  "description": "Desktop and browser storage",
  "keywords": [
    "storage",
    "memory",
    "localstorage",
    "indexeddb",
    "sqlite",
    "websql",
    "postgresql"
  ],
  "bugs": {
    "url": "https://github.com/fanatid/odd-storage/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Kirill Fomichev",
    "email": "fanatid@ya.ru"
  },
  "files": [
    "lib",
    "index.js",
    "LICENSE",
    "README.md"
  ],
  "main": "./index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/fanatid/odd-storage"
  },
  "scripts": {
    "compile": "browserify index.js -s oddStorage -o odd-storage.js -g [ uglifyify --no-sourcemap ]",
    "compile:debug": "browserify index.js -s oddStorage -o odd-storage.js -d",
    "compile:test": "browserify -o odd-storage.test.js test/*.js",
    "coverage": "istanbul cover _mocha -- test/*.js",
    "coveralls": "npm run coverage && coveralls <coverage/lcov.info",
    "clean": "rm -f odd-storage.js odd-storage.test.js",
    "karma": "./node_modules/karma/bin/karma start karma.conf.js",
    "lint": "standard",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "istanbul test mocha -- --reporter spec test/*.js",
    "test:browser": "npm run compile:test && npm run karma"
  },
  "dependencies": {
  },
  "devDependencies": {
    "browserify": "^9.0.8",
    "chai": "^2.3.0",
    "coveralls": "^2.11.2",
    "istanbul": "^0.3.15",
    "karma": "^0.12.36",
    "karma-chrome-launcher": "^0.1.12",
    "karma-detect-browsers": "^2.0.0",
    "karma-firefox-launcher": "^0.1.6",
    "karma-mocha": "^0.1.10",
    "mocha": "^2.2.5",
    "standard": "^4.3.0",
    "uglifyify": "^3.0.1"
  },
  "browser": {
    "./index.js": "./index-browser.js"
  },
  "standard": {
    "ignore": [
      "odd-storage.js",
      "odd-storage.test.js"
    ]
  }
}
